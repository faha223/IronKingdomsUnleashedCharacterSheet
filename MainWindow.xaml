                                <TextBlock Text="+" VerticalAlignment="Center" Margin="4,0"/>
                                <controls:StatBox Header="ability mod" Value="{Binding AbilityModifier}" Height="35" Width="36" HeaderFontSize="6" DataFontSize="16" />
                                <TextBlock Text="=" VerticalAlignment="Center" Margin="4,0"/>
                                <controls:StatBox Header="total cmd" Value="{Binding TotalCommandRange, Mode=OneWay}" IsReadOnly="True" Height="35" Width="36" HeaderFontSize="6" DataFontSize="16" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <!--Column 3-->
                    <StackPanel Margin="15,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox Style="{StaticResource GroupBoxStyle}">
                            <GroupBox.Header>
                                <TextBlock Text="SKILLS" FontSize="10" Foreground="White" FontWeight="Bold" />
                            </GroupBox.Header>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <StackPanel.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="FontFamily" Value="Copperplate" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="TextAlignment" Value="Center" />
                                        </Style>
                                    </StackPanel.Resources>
                                    <StackPanel Margin="0,0,2,0">
                                        <TextBlock Text="parent" />
                                        <TextBlock Text="set value" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,9,0">
                                        <TextBlock Text="skill" />
                                        <TextBlock Text="level" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,6,0">
                                        <TextBlock Text="" FontWeight="Bold" />
                                        <TextBlock Text="total" />
                                    </StackPanel>
                                </StackPanel>
                                <ListView ItemsSource="{Binding Skills}" AlternationCount="2" Background="Transparent" BorderThickness="0" ItemContainerStyle="{StaticResource DefaultListBoxItemStyle}" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Text="DAMAGE CAPACITY" FontSize="10" Foreground="White" FontWeight="Bold" />
                            </GroupBox.Header>
                            <Grid Width="153" Margin="0,20,20,0">
                                <Image Source="pack://application:,,,/Images/HealthSpiral.png" />
                                <CheckBox IsChecked="{Binding Damage[0]}" Margin="72,83,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[1]}" Margin="61,90,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[2]}" Margin="48,95,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[3]}" Margin="34,94,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[4]}" Margin="22,84,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[5]}" Margin="15,71,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[6]}" Margin="12,55,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[7]}" Margin="47,83,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[8]}" Margin="36,74,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[9]}" Margin="29,61,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[10]}" Margin="28,46,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[11]}" Margin="30,30,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[12]}" Margin="59,66,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[13]}" Margin="58,52,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[14]}" Margin="60,39,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[15]}" Margin="69,28,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[16]}" Margin="83,22,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[17]}" Margin="99,22,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[18]}" Margin="114,28,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[19]}" Margin="72,44,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[20]}" Margin="85,39,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[21]}" Margin="99,40,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[22]}" Margin="113,46,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[23]}" Margin="126,56,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[24]}" Margin="80,63,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[25]}" Margin="92,69,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[26]}" Margin="103,78,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[27]}" Margin="109,91,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[28]}" Margin="106,106,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[29]}" Margin="98,119,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[30]}" Margin="86,129,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[31]}" Margin="93,85,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[32]}" Margin="91,99,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[33]}" Margin="83,111,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[34]}" Margin="70,120,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                                <CheckBox IsChecked="{Binding Damage[35]}" Margin="56,126,0,0" Style="{StaticResource HealthSpiralCheckBox}" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                    <!--Column 4-->
                    <StackPanel Margin="15,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="320">
                        <GroupBox Style="{StaticResource GroupBoxStyle}">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" FontFamily="Copperplate" FontSize="10" FontWeight="Bold">
                                    BENEFITS &amp; ABILITIES
                                </TextBlock>
                            </GroupBox.Header>
                            <DockPanel>
                                <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
                                    <TextBlock DockPanel.Dock="Left">name</TextBlock>
                                    <TextBlock DockPanel.Dock="Right">page #</TextBlock>
                                    <TextBlock HorizontalAlignment="Center">description/notes</TextBlock>
                                </DockPanel>
                                <ListBox Background="Transparent" BorderThickness="0" ItemsSource="{Binding BenefitsAndAbilities}" AlternationCount="2">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource DefaultListBoxItemStyle}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" FontFamily="Copperplate" FontSize="10" FontWeight="Bold">
                                    FEAT POINTS
                                </TextBlock>
                            </GroupBox.Header>
                            <DockPanel>
                                <controls:StatBox DockPanel.Dock="Left" Margin="5,15,5,5">
                                    <controls:StatBox.Header>
                                        CURRENT
                                        FEAT
                                        POINTS
                                    </controls:StatBox.Header>
                                </controls:StatBox>
                                <TextBlock TextWrapping="Wrap">
                                </TextBlock>
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>
                </DockPanel>
            </TabItem>
            <TabItem Header="Inventory">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <!--Column 1-->
                    <StackPanel Grid.Column="0" Margin="15,15,0,15">
                        <!--Gear-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="GEAR" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <DockPanel>
                                <Grid DockPanel.Dock="Top" Margin="5,10,5,0" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="name" Grid.Column="0" HorizontalAlignment="Stretch" TextAlignment="Left"/>
                                    <TextBlock Text="benefit" Grid.Column="1" HorizontalAlignment="Stretch" TextAlignment="Left"/>
                                </Grid>
                                <ListBox ItemsSource="{Binding Gear}" AlternationCount="2" Background="Transparent" BorderThickness="0" >
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource DefaultListBoxItemStyle}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </DockPanel>
                        </GroupBox>
                        <!--Worn Armor-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="WORN ARMOR" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <DockPanel Margin="0,10,0,0">
                                <DockPanel DockPanel.Dock="Top" Margin="5,0">
                                    <TextBlock Text="name" DockPanel.Dock="Left" />
                                    <TextBlock Text="arm" Width="30" DockPanel.Dock="Right" TextAlignment="Center" />
                                    <TextBlock Text="def" Width="30" DockPanel.Dock="Right" TextAlignment="Center" />
                                    <TextBlock Text="spd" Width="30" DockPanel.Dock="Right" TextAlignment="Center" />
                                    <TextBlock Text="description/notes" TextAlignment="Center" />
                                </DockPanel>
                                <ListBox ItemsSource="{Binding WornArmor}" AlternationCount="2" Background="Transparent" BorderThickness="0" >
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource DefaultListBoxItemStyle}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </DockPanel>
                        </GroupBox>
                        <!--Connections-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="CONNECTIONS" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <DockPanel Margin="0,10,0,0">
                                <DockPanel DockPanel.Dock="Top" Margin="5,0">
                                    <TextBlock Text="name" DockPanel.Dock="Left" />
                                    <TextBlock Text="page#" Width="30" DockPanel.Dock="Right" TextAlignment="Center" />
                                    <TextBlock Text="description/notes" TextAlignment="Center" />
                                </DockPanel>
                                <ListBox ItemsSource="{Binding Connections}" AlternationCount="2" Background="Transparent" BorderThickness="0" >
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource DefaultListBoxItemStyle}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>
                    <!--Column 2-->
                    <StackPanel Grid.Column="1" Margin="15">
                        <GroupBox Style="{StaticResource GroupBoxStyle}">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="SPELLS" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <DockPanel Margin="0,10,0,0">
                                <DockPanel DockPanel.Dock="Top" Margin="5,0">
                                    <TextBlock DockPanel.Dock="Left" Text="arcane tradition" VerticalAlignment="Bottom" />
                                    <TextBox Text="{Binding ArcaneTradition}" />
                                </DockPanel>
                                <Grid DockPanel.Dock="Top" Margin="5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="18*" />
                                        <ColumnDefinition Width="59*"/>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="35"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="name" HorizontalAlignment="Left" />
                                    <TextBlock Text="cost" HorizontalAlignment="Center" Grid.Column="2" Margin="6,0,5,0" />
                                    <TextBlock Text="rng" HorizontalAlignment="Center" Grid.Column="3" Margin="7,0" />
                                    <TextBlock Text="aoe" HorizontalAlignment="Center" Grid.Column="4" Margin="8,0" />
                                    <TextBlock Text="pow" HorizontalAlignment="Center" Grid.Column="5" Margin="6,0" />
                                    <TextBlock Text="up" HorizontalAlignment="Center" Grid.Column="6" Margin="11,0" />
                                    <TextBlock Text="off" HorizontalAlignment="Center" Grid.Column="7" Margin="9,0,8,0" />
                                </Grid>
                                <ListBox ItemsSource="{Binding Spells}" AlternationCount="2" Background="Transparent" BorderThickness="0" >
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource DefaultListBoxItemStyle}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>
                    <!--Column 3-->
                    <StackPanel Grid.Column="2" Margin="0,15,15,15">
                        <!--Notes-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="NOTES" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <TextBox Text="{Binding Notes}" TextWrapping="Wrap" Height="280" TextAlignment="Left" VerticalAlignment="Top"  Margin="5,15,5,0">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="transparent" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </GroupBox>
                        <!--Permanent Injuries-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="PERMANENT INJURIES" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <TextBox Text="{Binding PermanentInjuries}" TextWrapping="Wrap" Height="100" TextAlignment="Left" VerticalAlignment="Top"  Margin="5,15,5,0">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="transparent" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </GroupBox>
                        <!--Spoken Languages-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="SPOKEN LANGUAGES" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <TextBox Text="{Binding SpokenLanguages}" TextWrapping="Wrap" Height="100" TextAlignment="Left" VerticalAlignment="Top" Margin="5,15,5,0">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="transparent" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </GroupBox>
                        <!--Religious Beliefs-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="RELIGIOUS BELIEFS" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <TextBox Text="{Binding ReligiousBeliefs}" TextWrapping="Wrap" Height="100" TextAlignment="Left" VerticalAlignment="Top"  Margin="5,15,5,0">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="transparent" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </GroupBox>
                        <!--Gold-->
                        <GroupBox Style="{StaticResource GroupBoxStyle}" HorizontalAlignment="Left" Width="160" Margin="0,15,0,0">
                            <GroupBox.Header>
                                <TextBlock Foreground="White" Text="GOLD" FontSize="10" FontWeight="Bold" />
                            </GroupBox.Header>
                            <TextBox Text="{Binding Gold}" TextWrapping="Wrap" Height="80" TextAlignment="Left" VerticalAlignment="Top" Margin="5,15,5,0">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="20" />
                                        <Setter Property="FontStyle" Value="Normal" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="transparent" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

