                            </GroupBox.Header>
                            <StackPanel Orientation="Horizontal" Margin="3,13,3,3" HorizontalAlignment="Right">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="int" HorizontalAlignment="Center" FontSize="10" />
                                    <TextBlock Text="stat" HorizontalAlignment="Center" FontSize="10" />
                                </StackPanel>
                                <TextBlock Text="+" VerticalAlignment="Center" Margin="4,0"/>
